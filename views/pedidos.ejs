    <body>
        <header class="main-header">
            <nav class="main-nav nav">
                <ul>
                    <li> <a href="index.html">INICIO</a></li>
                    <li> <a href="store">MENU</a></li>
                    <li> <a href="about.html">NOSOTROS</a></li>
